<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:elevation="8dp">

    <EditText
        android:id="@+id/searchBar"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search..."
        android:elevation="8dp"
        android:singleLine="true"
        android:maxLines="1"
        android:lines="1"
        android:background="@android:color/white"
        android:imeOptions="actionDone" />


    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="55dp"
        android:focusableInTouchMode="true"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listHeading"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:text="Planned Roadworks"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/listDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingBottom="5dp"
                android:textSize="14dp"/>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
            <!--android:layout_below="@id/listHeading"-->

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dateFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@android:color/white"
        android:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="end"
        app:srcCompat="@drawable/ic_date_range_24dp"
        android:layout_margin="12dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/contentFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:tint="@android:color/white"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_anchor="@id/dateFab"
        app:layout_anchorGravity="end"
        app:srcCompat="@drawable/ic_layers_black_24dp"
        app:useCompatPadding="true"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
