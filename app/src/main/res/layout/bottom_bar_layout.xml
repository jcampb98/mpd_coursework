<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:elevation="4dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select content"
            android:textSize="16sp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/btnCurrentIncidents"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="vertical"
        android:minHeight="30dp"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Incidents"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnRoadworks"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="vertical"
        android:minHeight="30dp"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roadworks"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnPlannedRoadworks"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="vertical"
        android:minHeight="30dp"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planned Roadworks"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>